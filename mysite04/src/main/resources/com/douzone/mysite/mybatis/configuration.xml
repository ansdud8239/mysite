<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<!-- value = "true"이면 프로젝션 컬럼이름의 _를 대문자로 자동 변경 -->
		<setting name="mapUnderscoreToCamelCase" value="false" />
	</settings>
	<typeAliases>
		<!-- Alias 설정 -->
		<typeAlias type="com.douzone.mysite.vo.UserVo"
			alias="uservo" />
		<typeAlias type="com.douzone.mysite.vo.GuestbookVo"
			alias="guestbookvo" />
		<typeAlias type="com.douzone.mysite.vo.BoardVo"
			alias="boardvo" />
		<typeAlias type="com.douzone.mysite.vo.SiteVo"
			alias="sitevo" />
		<typeAlias type="com.douzone.mysite.vo.GalleryVo"
			alias="galleryvo" />
	</typeAliases>
	<mappers>
		<!-- SQL mapping -->
		<mapper resource="com/douzone/mysite/mybatis/mappers/user.xml" />
		<mapper resource="com/douzone/mysite/mybatis/mappers/guestbook.xml" />
		<mapper resource="com/douzone/mysite/mybatis/mappers/board.xml" />
		<mapper resource="com/douzone/mysite/mybatis/mappers/site.xml" />
		<mapper resource="com/douzone/mysite/mybatis/mappers/gallery.xml" />
	</mappers>
</configuration>
